<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Posts" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_600</item>
        <item name="colorPrimaryVariant">@color/blue_grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="circularProgressIndicatorStyle">@style/CircularProgressIndicatorStyle</item>
        <item name="linearProgressIndicatorStyle">@style/LinearProgressIndicatorStyle</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
    </style>
</resources>